              "path": ["api", "v1", "chat", "active", ""],
              "query": [
                {"key": "limit", "value": "20", "description": "Number of active chats to return"},
                {"key": "includeSummary", "value": "true", "description": "Include summary statistics"},
                {"key": "page", "value": "1", "description": "Page number"}
              ]
            },
            "description": "Get active chats using N8N database integration"
          }
        },
        {

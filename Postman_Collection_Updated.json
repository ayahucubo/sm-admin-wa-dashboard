    {
      "name": "Chat History APIs (N8N Integration)",
      "item": [
        {
          "name": "Get Comprehensive Chat History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{api_key}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/v1/chat/?limit=10&includeStatistics=true&menu=menu_cuti&page=1",
              "host": ["{{base_url}}"],
              "path": ["api", "v1", "chat", ""],
              "query": [
                {"key": "limit", "value": "10", "description": "Number of records to return"},
                {"key": "includeStatistics", "value": "true", "description": "Include statistics in response"},
                {"key": "menu", "value": "menu_cuti", "description": "Filter by menu type"},
                {"key": "page", "value": "1", "description": "Page number"}
              ]
            },
            "description": "Get comprehensive chat history with N8N integration"
          }
        },
        {
          "name": "Get Active Chats",
